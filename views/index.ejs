<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contacts</title>
    <link rel="icon" href="data:,">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="min-h-screen bg-zinc-900 text-white">
        <!-- Toast -->
        <div id="toast"
            class="fixed right-4 top-4 z-50 px-4 py-2 rounded-md bg-zinc-800 shadow opacity-0 transition-opacity"></div>

        <div class="p-6 sm:p-10">
            <h1 class="text-2xl font-bold mb-4">Add Contact</h1>
            <form id="contact-form" class="grid gap-3 max-w-xl">
                <input id="name" class="px-4 py-2 rounded-md bg-zinc-800 outline-none" type="text" placeholder="Name"
                    required />
                <input id="email" class="px-4 py-2 rounded-md bg-zinc-800 outline-none" type="email" placeholder="Email"
                    required />
                <input id="phone" class="px-4 py-2 rounded-md bg-zinc-800 outline-none" type="text"
                    placeholder="Phone (e.g., 9876543210)" required />
                <div class="flex gap-2 flex-wrap">
                    <button class="bg-blue-600 px-5 py-2 rounded-md cursor-pointer" type="submit">Add Contact</button>
                    <button id="refresh" class="bg-zinc-800 px-5 py-2 rounded-md cursor-pointer" type="button">Get Contacts</button>
                </div>
            </form>
        </div>

        <!-- List -->
        <div class="p-6 sm:p-10">
            <h2 class="text-xl font-semibold mb-3">Contacts</h2>
            <div id="contact-list" class="flex gap-3 flex-wrap">
                <h3 class="text-zinc-500">No Contacts created yetâ€¦</h3>
            </div>
        </div>
    </div>

    <script src="/javascripts/app.js"></script>
</body>

</html>